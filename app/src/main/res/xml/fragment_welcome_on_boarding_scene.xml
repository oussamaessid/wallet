<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="500" />

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/btnNext"
            style="@style/HotelWalletButtonMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/txt_btn_next"
            android:textColor="@color/colorWhite"
            motion:backgroundTint="@color/colorDodgerBlue"
            motion:layout_constraintBottom_toBottomOf="@+id/btnSkip"
            motion:layout_constraintEnd_toStartOf="@+id/btnSkip"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/btnSkip"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintHorizontal_bias="0.0" />

        <Constraint
            android:id="@+id/btnSkip"
            style="@style/HotelWalletButtonMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/txt_btn_skip"
            android:textColor="@color/colorWhite"
            motion:backgroundTint="@color/colorDoveGray"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btnNext"
            style="@style/HotelWalletButtonMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/txt_btn_next"
            android:textColor="@color/colorWhite"
            motion:backgroundTint="@color/colorDodgerBlue"
            motion:layout_constraintBottom_toBottomOf="@+id/btnSkip"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/btnSkip" />

        <Constraint
            android:id="@+id/btnSkip"
            style="@style/HotelWalletButtonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:text="@string/txt_btn_skip"
            android:textColor="@color/colorWhite"
            motion:backgroundTint="@color/colorDoveGray"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />

    </ConstraintSet>
</MotionScene>