<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.language.LanguageFragment">

    <include
        android:id="@+id/toolBar"
        layout="@layout/main_toolbar" />

    <LinearLayout
        android:id="@+id/linearLangEn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <ImageView
            android:id="@+id/imgCheckEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_blue" />

        <TextView
            style="@style/TextViewStyle.Medium.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/txt_english" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_flag_en"/>
    </LinearLayout>

    <View
        android:id="@+id/separatorLangEn"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bonjour"
        app:layout_constraintTop_toBottomOf="@+id/linearLangEn" />

    <LinearLayout
        android:id="@+id/linearLangAr"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/separatorLangEn">

        <ImageView
            android:id="@+id/imgCheckAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_blue" />

        <TextView
            style="@style/TextViewStyle.Medium.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:text="@string/txt_arabic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_flag_tn"/>
    </LinearLayout>

    <View
        android:id="@+id/separatorLangAr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bonjour"
        app:layout_constraintTop_toBottomOf="@+id/linearLangAr" />

</androidx.constraintlayout.widget.ConstraintLayout>