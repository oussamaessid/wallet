<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgSlide"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleSlide"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bacground4" />

    <TextView
        android:id="@+id/txtTitleSlide"
        style="@style/TextViewStyle.Bold.20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/txtDesSlide" />

    <TextView
        android:id="@+id/txtDesSlide"
        style="@style/TextViewStyle.Medium.16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />
</androidx.constraintlayout.widget.ConstraintLayout>