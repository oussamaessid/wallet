<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.setting.SettingFragment">

    <include
        android:id="@+id/toolBar"
        layout="@layout/main_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/linearProfile"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_user"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_profile" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorProfile"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearProfile" />

            <LinearLayout
                android:id="@+id/linearLanguage"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/separatorProfile">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_language"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_langauge" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorLanguage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearLanguage" />

            <LinearLayout
                android:id="@+id/linearHistorical"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/separatorLanguage">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_history"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_historical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorHistorical"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearHistorical" />

            <LinearLayout
                android:id="@+id/linearQuestion"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/separatorHistorical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_live_chat"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_chat" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorQuestion"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearQuestion" />

            <LinearLayout
                android:id="@+id/linearPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/separatorQuestion">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_privacy_policy"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_privacy_policy" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearPrivacyPolicy" />

            <LinearLayout
                android:id="@+id/linearTermsOfUse"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintTop_toBottomOf="@+id/separatorPrivacyPolicy">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_terms_and_conditions"
                    app:tint="@color/colorBlack" />

                <TextView
                    style="@style/TextViewStyle.Medium.16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:text="@string/txt_terms_of_use" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/img_arrow_right"
                    app:tint="@color/colorBlack" />
            </LinearLayout>

            <View
                android:id="@+id/separatorTermsOfUse"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bonjour"
                app:layout_constraintTop_toBottomOf="@+id/linearTermsOfUse" />

            <Button
                android:id="@+id/btnLogout"
                style="@style/HotelWalletButtonSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_btn_logout"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@+id/separatorTermsOfUse"
                app:strokeColor="@color/colorBlack" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>