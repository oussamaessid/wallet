<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HotelWallet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorCerulean</item>
        <item name="colorPrimaryVariant">@color/colorCerulean</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorCerulean</item>
        <item name="colorSecondaryVariant">@color/colorCerulean</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <item name="disabledColor">@color/boulder</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="HotelWalletButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSizeRegularPlus</item>
        <item name="background">@drawable/rectangle_border_black</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/easy_lab_btn_bg_color_selector</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="HotelWalletButtonSecond" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/textSizeRegularPlus</item>
        <item name="android:textColor">@color/text_btn_text_color_selector_second</item>
        <item name="strokeColor">@color/text_btn_text_color_selector_second</item>
        <item name="iconTint">@color/text_btn_text_color_selector_second</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">10dp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="HotelWalletInputText">
        <item name="android:textSize">@dimen/textSizeRegularPlus</item>
        <item name="android:textColorHint">@color/colorDoveGray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HotelWalletEditText" parent="HotelWalletInputText">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_radius8_light_grey</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>